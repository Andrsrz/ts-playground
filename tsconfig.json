{
  "compilerOptions": {
    "target": "es6",
    "useDefineForClassFields": true,
    // "module": "ESNext",
    // "lib": [
    //   "ESNext",
    //   "DOM"
    // ],
    "moduleResolution": "Node",
    "strict": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "noEmitOnError": true,
    "noUnusedLocals": false,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "outDir": "./build",
    "rootDir": "./src",
    "removeComments": true
  },
  "include": [
    "./src"
  ],
  "exclude": [
    "node_modules" // Default
  ]
}